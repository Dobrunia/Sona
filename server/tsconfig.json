{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "@core/*": ["core/*"],
      "@db/*": ["db/*"],
      "@auth/*": ["auth/*"],
      "@graphql/*": ["graphql/*"],
      "@storage/*": ["storage/*"],
      "@media/*": ["media/*"],
      "@rate-limit/*": ["rate-limit/*"],
      "@ws/*": ["ws/*"]
    }
  },
  "include": ["src"]
}
